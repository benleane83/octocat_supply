# OctoCAT Supply - Environment Configuration
# Copy this file to .env and update values as needed for your environment

# ========================================
# API SERVER CONFIGURATION
# ========================================

# Port the API server listens on (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Absolute path to SQLite database file
# Default: <project-root>/api/data/app.db
# Examples:
#   DB_FILE=/var/lib/octocat/app.db
#   DB_FILE=/opt/data/supply.db
#   DB_FILE=C:\Data\octocat\app.db (Windows)
# If not set, defaults to project-relative path converted to absolute
# DB_FILE=

# Database engine (currently only 'sqlite' is supported)
DB_ENGINE=sqlite

# Enable WAL (Write-Ahead Logging) mode for better concurrency (default: true)
DB_ENABLE_WAL=true

# Database connection timeout in milliseconds (default: 30000)
DB_TIMEOUT=30000

# Enable foreign key constraints (default: true)
DB_FOREIGN_KEYS=true

# ========================================
# CORS CONFIGURATION
# ========================================

# Comma-separated list of allowed CORS origins
# For local development:
API_CORS_ORIGINS=http://localhost:3001,http://localhost:5137

# For production, be specific with your domain:
# API_CORS_ORIGINS=https://app.example.com,https://admin.example.com

# ========================================
# LOGGING & DEBUG
# ========================================

# Enable verbose SQL logging in development
LOG_LEVEL=info

# ========================================
# SECURITY (Future Enhancements)
# ========================================

# JWT secret for authentication (to be implemented)
# JWT_SECRET=your-secret-key-here

# Enable HTTPS redirect (for production)
# HTTPS_REDIRECT=true
